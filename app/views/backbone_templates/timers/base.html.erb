<script type="text/template" id="base_timer_template">
  <div class="timer timer-container span3">
    <div id="default-timer">
      <i class="large-timer-icon icon-time"></i>
      <div class="clock">
        <span class="minutes">{{ minutes }}</span>
        :
        <span class="seconds">{{ seconds }}</span>
      </div>
      <div class="start-btn btn btn-success">START</div>
      <div class="pause-btn btn btn-warning">PAUSE</div>
    </div>
  </div>
</script>
